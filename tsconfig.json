{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "target": "ESNext"
  },
  "exclude": [
    ".eslintrc.js",
    "jest.config.js",
    "node_modules",
    "packages/**/dist",
    "packages/**/jest.config.js"
  ]
}
