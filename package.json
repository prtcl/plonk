{
  "name": "plonk",
  "version": "0.1.0",
  "description": "Timer and utility micro-library",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/prtcl/plonk.js.git"
  },
  "author": "Cory O'Brien <cory@prtcl.cc>",
  "scripts": {
    "jshint": "jshint -c .jshintrc lib/ || true",
    "build": "mkdir -p dist && npm run browserify && npm run min",
    "browserify": "browserify . -p bundle-collapser/plugin -s plonk | derequire > dist/plonk.js",
    "min": "uglifyjs -mc warnings=false dist/plonk.js > dist/plonk.min.js"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "bundle-collapser": "^1.2.1",
    "derequire": "^2.0.3",
    "jshint": "^2.9.1",
    "uglifyjs": "^2.4.10"
  }
}
