{
  "name": "plonk",
  "version": "1.1.0",
  "description": "Timer and utility micro-library",
  "repository": {
    "type": "git",
    "url": "git://github.com/prtcl/plonk.git"
  },
  "author": "Cory O'Brien <cory@prtcl.cc>",
  "license": "MIT",
  "main": "dist/plonk.js",
  "module": "dist/plonk.es.js",
  "scripts": {
    "build": "rm -r ./dist ; mkdir -p ./dist ; npm run rollup && npm run uglifyjs && npm run docs",
    "docs": "rm -r ./docs ; mkdir -p ./docs ; documentation build ./src/index.js -f md > ./docs/README.md",
    "lint": "$(npm bin)/eslint ./src ./test || true ; $(npm bin)/documentation lint ./src/index.js",
    "rollup": "$(npm bin)/rollup --config .rolluprc.js",
    "test": "npm run test:node && npm run test:electron && npm run test:aplus",
    "test:aplus": "$(npm bin)/rollup test/__aplus-adapter.js --format cjs | /usr/bin/env node",
    "test:electron": "$(npm bin)/zuul --electron -- ./test/*.spec.js | $(npm bin)/tap-spec || true",
    "test:local": "$(npm bin)/zuul --local -- ./test/*.spec.js",
    "test:node": "$(npm bin)/tape -r babel-register ./test/*.spec.js | $(npm bin)/tap-spec || true",
    "test:sauce": "$(npm bin)/zuul -- ./test/*.spec.js | $(npm bin)/tap-spec || true",
    "uglifyjs": "$(npm bin)/uglifyjs -mc warnings=false --screw-ie8 ./dist/plonk.js > ./dist/plonk.min.js"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.24.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-runtime": "^6.23.0",
    "babel-tape-runner": "^2.0.1",
    "documentation": "^4.0.0-rc.1",
    "electron": "^1.4.13",
    "eslint": "^3.12.2",
    "promises-aplus-tests": "^2.1.2",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^7.1.0",
    "rollup-plugin-node-resolve": "^2.1.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "uglifyjs": "^2.4.10",
    "zuul": "^3.11.1"
  }
}
