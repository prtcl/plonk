{
  "name": "plonk",
  "version": "1.0.0",
  "description": "Timer and utility micro-library",
  "repository": {
    "type": "git",
    "url": "git://github.com/prtcl/plonk.git"
  },
  "author": "Cory O'Brien <cory@prtcl.cc>",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "lint": "$(npm bin)/eslint ./lib || true",
    "test": "npm run lint && mocha test/test.js || true",
    "zuul": "zuul test/test.js",
    "build": "mkdir -p dist && npm run browserify && npm run min",
    "browserify": "browserify lib/index.js -p bundle-collapser/plugin -s plonk > dist/plonk.js",
    "min": "uglifyjs -mc warnings=false dist/plonk.js > dist/plonk.min.js",
    "doc": "mkdir -p doc && documentation lint lib/index.js && documentation build lib/index.js -f md > doc/README.md"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "bundle-collapser": "^1.2.1",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.2.0",
    "documentation": "^4.0.0-beta1",
    "eslint": "^3.12.2",
    "mocha": "^2.4.5",
    "uglifyjs": "^2.4.10",
    "zuul": "^3.10.1"
  },
  "dependencies": {
    "promise": "^7.1.1"
  }
}
