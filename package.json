{
  "name": "plonk",
  "version": "1.0.0",
  "description": "Timer and utility micro-library",
  "repository": {
    "type": "git",
    "url": "git://github.com/prtcl/plonk.git"
  },
  "author": "Cory O'Brien <cory@prtcl.cc>",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "lint": "$(npm bin)/eslint ./lib ./test || true",
    "test": "npm run lint && npm run test:node && npm run test:electron",
    "test:node": "$(npm bin)/tape -r babel-register test/**/*.js | $(npm bin)/tap-spec || true",
    "test:local": "$(npm bin)/zuul --local -- test/**/*.spec.js",
    "test:electron": "$(npm bin)/zuul --electron -- test/**/*.spec.js | $(npm bin)/tap-spec || true",
    "build": "mkdir -p dist && npm run browserify && npm run min",
    "browserify": "browserify lib/index.js -p bundle-collapser/plugin -s plonk > dist/plonk.js",
    "min": "uglifyjs -mc warnings=false dist/plonk.js > dist/plonk.min.js",
    "doc": "mkdir -p doc && documentation lint lib/index.js && documentation build lib/index.js -f md > doc/README.md"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.0",
    "bundle-collapser": "^1.2.1",
    "documentation": "^4.0.0-beta1",
    "electron": "^1.4.13",
    "eslint": "^3.12.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "uglifyjs": "^2.4.10",
    "zuul": "^3.11.1"
  },
  "dependencies": {
    "promise": "^7.1.1"
  }
}
