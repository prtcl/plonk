{
  "name": "plonk",
  "version": "1.1.0",
  "description": "Timer and utility micro-library",
  "repository": {
    "type": "git",
    "url": "git://github.com/prtcl/plonk.git"
  },
  "author": "Cory O'Brien <cory@prtcl.cc>",
  "license": "MIT",
  "main": "dist/plonk.js",
  "module": "dist/plonk.es.js",
  "scripts": {
    "lint": "$(npm bin)/eslint ./lib ./test || true",
    "test": "cp .babelrc--tape .babelrc && npm run lint && npm run test:node && npm run test:electron",
    "test:node": "$(npm bin)/tape -r babel-register ./test/**/*.spec.js ./test/index.spec.js | $(npm bin)/tap-spec || true",
    "test:local": "$(npm bin)/zuul --local -- ./test/**/*.spec.js ./test/index.spec.js ",
    "test:sauce": "$(npm bin)/zuul -- ./test/**/*.spec.js ./test/index.spec.js | $(npm bin)/tap-spec || true",
    "test:electron": "$(npm bin)/zuul --electron -- ./test/**/*.spec.js ./test/index.spec.js | $(npm bin)/tap-spec || true",
    "build": "rm -r ./dist ; mkdir -p ./dist ; npm run rollup && npm run babel && npm run uglifyjs",
    "rollup": "cp .babelrc--rollup .babelrc && /usr/bin/env node ./bin/rollup.js",
    "babel": "$(npm bin)/babel ./dist/plonk.js -o ./dist/plonk.js",
    "uglifyjs": "$(npm bin)/uglifyjs -mc warnings=false --screw-ie8 ./dist/plonk.umd.js > ./dist/plonk.umd.min.js",
    "doc": "mkdir -p doc && documentation lint lib/index.js && documentation build lib/index.js -f md > doc/README.md"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.22.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-tape-runner": "^2.0.1",
    "documentation": "^4.0.0-beta1",
    "electron": "^1.4.13",
    "eslint": "^3.12.2",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "uglifyjs": "^2.4.10",
    "zuul": "^3.11.1"
  },
  "dependencies": {
    "asap": "^2.0.5",
    "promise": "^7.1.1"
  }
}
